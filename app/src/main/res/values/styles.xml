    </style>

    <style name="Sty_TxtInptLyt_RazaoSocialFornecedor" parent="Sty_TxtInptLyt">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">40</item>
        <item name="startIconDrawable">@drawable/icn_razao_social</item>
