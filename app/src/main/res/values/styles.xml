        <item name="counterMaxLength">15</item>
        <item name="startIconDrawable">@drawable/icn_ean</item>
        <item name="android:hint">Código Ean</item>
    </style>

    <style name="Sty_TxtInptLyt_NumeroItem" parent="Sty_TxtInptLyt">
