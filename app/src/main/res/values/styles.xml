<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CONFIGURAÇÃO DE ESTILOS PADRÕES -->
    <style name="Sty_AppCmpBtn">
        <item name="android:padding">@dimen/Dms_Espacamento_Padrao</item>
        <item name="android:height">52dp</item>
        <item name="android:textSize">@dimen/Dms_TamanhoTexto_Nivel_SubTitulo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sty_TxtInptLyt" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/seletor_de_cor_por_status</item>
        <item name="hintTextColor">@color/seletor_de_cor_por_status</item>
        <item name="colorControlActivated">@color/seletor_de_cor_por_status</item>
        <item name="endIconTint">@color/seletor_de_cor_por_status</item>
        <item name="startIconTint">@color/seletor_de_cor_por_status</item>
        <item name="helperTextEnabled">true</item>
    </style>
    
    <style name="Sty_EdtTxt">
        <item name="android:background">@drawable/bg_edttxt_pesquisa</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">@dimen/Dms_Espacamento_Padrao</item>
        <item name="android:drawableStart">@drawable/icn_pesquisar</item>
        <item name="android:drawableTint">@color/seletor_de_cor_por_status</item>
        <item name="android:textColor">@color/verde_800</item>
        <item name="android:textColorHint">@color/cinza_700</item>
    </style>

    <style name="Sty_TxtVw">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Sty_TxtVw_Destaque" parent="Sty_TxtVw">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CONFIGURAÇÃO DE ESTILOS DE COMPONENTES -->
    <style name="Sty_AppCmpBtn_VerdeClaro" parent="Sty_AppCmpBtn">
        <item name="android:background">@drawable/bg_appcmpbtn_verde_claro</item>
        <item name="android:textColor">@color/branco_1000</item>
    </style>

    <style name="Sty_AppCmpBtn_VerdeEscuro" parent="Sty_AppCmpBtn">
        <item name="android:background">@drawable/bg_appcmpbtn_verde_escuro</item>
        <item name="android:textColor">@color/branco_1000</item>
    </style>

    <style name="Sty_AppCmpBtn_Amarelo" parent="Sty_AppCmpBtn">
        <item name="android:background">@drawable/bg_appcmpbtn_amarelo</item>
        <item name="android:textColor">@color/verde_800</item>
    </style>

    <style name="Sty_AppCmpBtn_Vermelho" parent="Sty_AppCmpBtn">
        <item name="android:background">@drawable/bg_appcmpbtn_vermelho</item>
        <item name="android:textColor">@color/branco_1000</item>
    </style>

    <style name="Sty_AppCmpBtn_Cinza" parent="Sty_AppCmpBtn">
        <item name="android:background">@drawable/bg_appcmpbtn_cinza</item>
        <item name="android:textColor">@color/cinza_700</item>
    </style>

    <style name="Sty_TxtInptLyt_Email" parent="Sty_TxtInptLyt">
        <item name="startIconDrawable">@drawable/icn_email</item>
        <item name="android:hint">E-mail</item>
    </style>

    <style name="Sty_TxtInptLyt_Senha" parent="Sty_TxtInptLyt">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">12</item>
        <item name="endIconMode">password_toggle</item>
        <item name="startIconDrawable">@drawable/icn_senha</item>
        <item name="android:hint">Senha</item>
    </style>

    <style name="Sty_TxtInptLyt_NumeroNFe" parent="Sty_TxtInptLyt">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">9</item>
        <item name="startIconDrawable">@drawable/icn_numero</item>
